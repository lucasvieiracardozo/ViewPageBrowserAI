{
  "manifest_version": 3,
  "name": "ViewPageBrowserAI",
  "version": "2.0.0",
  "description": "Seu copiloto de IA para a Web, potencializado pelo Gemini.",

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "debugger"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "dist/background.js"
  },

  "action": {
    "default_popup": "public/index.html"
  },

  "options_page": "public/options.html",

  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },

  "commands": {
    "open_chat": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space",
        "mac": "Command+Shift+Space"
      },
      "description": "Abrir o chat da extens√£o"
    }
  }
}